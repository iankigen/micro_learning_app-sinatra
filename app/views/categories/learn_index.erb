<div>
  <div style="height: 100px"></div>
  <div class="card">
    <div class="card-block">
      <div class="container">
        <div class="row">
          <div class="container">

            <% if @categories %>
              <a class="btn btn-outline-primary" href="/add-category">Add new Category</a>
              <hr>
              <% @categories.each do |category| %>
                <span class="badge badge-pill badge-info"><%= category.name %>
                  <a href="/delete-category/<%= category.id %>"><span aria-hidden="true">&times;</span></a>
                </span>

              <% end %>
            <% end %>
            <hr>
          </div>

          <% if @top_headlines %>
            <% @top_headlines.each do |top_headlines| %>
              <% top_headlines.each do |top_headline| %>
                <div class="blog-post">
                  <h2 class="blog-post-title"><%= top_headline.title %></h2>
                  <img src="<%= top_headline.urlToImage %>" class="img-fluid" alt="">
                  <p class="blog-post-meta"><%= top_headline.author %></p>

                  <p><%= top_headline.description %></p>
                  <a class="btn btn-outline-success" href="<%= top_headline.url %>">Learn More</a>
                  <hr>
                </div>
              <% end %>
            <% end %>
            <nav class="blog-pagination">
              <a class="btn btn-outline-primary" href="#">Older</a>
              <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
            </nav>
          <% else %>
            <div class="inner cover">
              <div class="page_not_found">
                <h1 class="">Oops!</h1>
                <h3 class="">This is awkward</h3>
                <p class="">You don't have any category at the moment.</p>

                <hr>

                <p class="lead">
                  <a href="/add-category" class="btn btn-lg btn-outline-success">Try adding a Category</a>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


